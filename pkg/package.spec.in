%global pkgname nof
%global desc \
Network objects finder.

%bcond_with tests

Name:           python-%{pkgname}
Version:        @VERSION@
Release:        1%{?dist}
Summary:        Python library to find network objects
License:        MIT
URL:            https://localhost.localdomain/network_objects_finder
Source0:        %{url}/archive/RELEASE_%{version}.tar.gz
BuildArch:      noarch
BuildRequires:  python3-setuptools

%description    %{desc}

%package -n python3-%{pkgname}
Summary:        %{summary}
Requires:       python3-anyconfig
Requires:       python3-networkx
Requires:       python3-netaddr
Requires:       python3-setuptools
# Django and plugins
Requires:       python3-django
%{?python_provide:%python_provide python3-%{pkgname}}

%description -n python3-%{pkgname} %{desc}

%prep
%autosetup -n %{pkgname}-%{version}

%build
%py3_build

%install
%py3_install

%if %{with tests}
%check
tox -e py$(python -c "import sys; sys.stdout.write(sys.version[:3].replace('.', ''))")
%endif

%files -n python3-%{pkgname}
%doc AUTHORS.txt README.rst
%license LICENSE.MIT
%{python3_sitelib}/*

%changelog
* Sat Feb  1 2020 Satoru SATOH <ssato@redhat.com> - 0.1.0-1
- Initial packaging
